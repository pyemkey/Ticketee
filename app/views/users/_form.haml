= form_for @user do |f|
  = display_errors(@user)

  = f.label :name, "Username"
  = f.text_field :name

  = f.label :email
  = f.text_field :email

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation
  = f.password_field :password_confirmation

  = f.submit "#{@user.new_record? ? "Sign up" : "Update Profile"}"

